<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_an_ju"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgColor"
    tools:context="com.bwei.text.suanfademo.AnJuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/titleBarColor"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/topbar_up"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购房计算器"
            android:textSize="23sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_goods_kefu"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp" />
    </RelativeLayout>
    <!--上边-->
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--功能分块-->
        <LinearLayout
            android:layout_marginTop="2dp"
            android:background="@color/xbgColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="房费计算"
                />
            <TextView
                android:id="@+id/shui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="税费计算"
                />
        </LinearLayout>
        <!-- 进度-->
        <LinearLayout
            android:background="@color/xbgColor"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <!-- 进度条-->
            <com.czp.library.ArcProgress
                android:id="@+id/myProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:radius="120dp"
                app:arcCapRound="true"
                app:arcbgColor="@color/progressColorGreen"
                app:degree="100"
                app:unprogresColor="@color/unprogressColorG"
                app:progressStyle="arc"
                app:progressColor="@color/progressColorOrange"
                app:tickDensity="5" />
            <!--利息-->
            <LinearLayout
                android:layout_marginTop="-50dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共支付利息"
                    android:textColor="@color/lixitextColor"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_marginTop="-50dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/zonlixiNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/editMoneyColor"
                    />
                <TextView
                    android:layout_marginTop="-50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/lixitextColor"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--还款方式-->
        <LinearLayout
            android:background="@color/xbgColor"

            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="还款方式"
                android:textSize="25sp"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等额本息"
                android:textSize="25sp"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等额本金"
                android:textSize="25sp"
                />
        </LinearLayout>

        <!--房款总额-->
        <LinearLayout
            android:background="@color/xbgColor"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房款总额"
                android:textSize="25sp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/fangZonM"
                    android:gravity="center_vertical|right"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/editMoneyColor"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:background="@null"
                    />

                <TextView
                    android:gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textSize="25sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <!--首付金额-->
        <LinearLayout
            android:background="@color/xbgColor"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首付金额"
                android:textSize="25sp"
                />
            <!--百分比-->
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shouB"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="30"
                    android:textSize="25sp"
                    android:textColor="@color/editMoneyColor"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="%"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <!--首付价钱-->
            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/shouM"
                    android:gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="@color/editMoneyColor"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:background="@null"
                    />
                <TextView
                    android:gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textSize="25sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <!--贷款总额-->
        <LinearLayout
            android:background="@color/xbgColor"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款总额"
                android:textSize="25sp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="180dp"
                android:layout_gravity="center_vertical|right"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/daiZM"
                    android:gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/editMoneyColor"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:background="@null"
                    />

                <TextView
                    android:gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textSize="25sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--下边-->
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--商业贷款-->
        <LinearLayout
            android:background="@color/xbgColor"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商业贷款"
                android:textSize="25sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="180dp"
                android:layout_gravity="center_vertical|right"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/shangDaiM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70"
                    android:textColor="@color/editMoneyColor"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:background="@null"
                    />

                <TextView
                    android:gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textSize="25sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <!--商业贷款利率-->
        <RelativeLayout
            android:background="@color/xbgColor"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商业贷款利率"
                android:textSize="25sp"
                />
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新基准利率(4.90%) >"
                android:textSize="25sp"
                />
        </RelativeLayout>
        <!--商业贷款年限-->
        <RelativeLayout
            android:background="@color/xbgColor"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商业贷款总额"
                android:textSize="25sp"
                />
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20年 >"
                android:textSize="25sp"
                />
        </RelativeLayout>
    </LinearLayout>
    
</LinearLayout>
